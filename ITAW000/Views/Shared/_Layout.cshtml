<!doctype html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="//malihu.github.io/custom-scrollbar/jquery.mCustomScrollbar.min.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
   


    <link rel="stylesheet" href="~/Content/css/main.css">
    <link rel="stylesheet" href="~/Content/css/side-bar-theme.css">

    <title>@ViewBag.Title - App Classificação</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="page-wrapper default-theme sidebar-bg bg1 toggled">
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <!-- sidebar-brand  -->
                <div class="sidebar-item sidebar-brand">
                    <Span class="title">Monitor 431 - 987 </Span> 
                 </div>

                <!-- sidebar-header  -->
                <div class="sidebar-item sidebar-header d-flex flex-nowrap">
                    <div class="user-pic">
                        <img class="img-responsive img-rounded" src="~/Images/usuario.png" alt="User picture">
                    </div>
                    <div class="user-info">
                        <span class="user-name">
                            Anderson
                            <strong>Barreto</strong>
                        </span>
                        <span class="user-role">Administrator</span>
                        <span class="user-status">
                            <i class="fa fa-circle"></i>
                            <span>Online</span>
                        </span>
                    </div>

                </div>


                <!-- sidebar-menu  -->
                <div class=" sidebar-item sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span>Geral</span>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="glyphicon glyphicon-home"></i>
                                <span class="menu-text">Dashboard</span>

                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="@Url.Action("index", "Home")">
                                            <i class="glyphicon glyphicon-home"></i>
                                            Dashboard 431
                                        </a>
                                    </li>

                                    <li>
                                        <a href="@Url.Action("index", "Home")">
                                            <i class="glyphicon glyphicon-home"></i>
                                            Dashboard 987
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="glyphicon glyphicon-th"></i>
                                <span class="menu-text">Dominios</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li><a href="@Url.Action("index", "Responsavel")"> <i class="glyphicon glyphicon-user"></i>Responsavel</a></li>
                                    <li><a href="@Url.Action("index", "Retorno")"> <i class="glyphicon glyphicon-share-alt"></i>Retorno</a></li>
                                    <li><a href="@Url.Action("index", "Sistema")"> <i class="glyphicon glyphicon-modal-window"></i>Sistema</a></li>
                                    <li><a href="@Url.Action("index", "Situacao")"> <i class="glyphicon glyphicon-flag"></i>Situação</a></li>
                                    <li><a href="@Url.Action("index", "Tipo")"> <i class="glyphicon glyphicon-tags"></i>Tipo</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="header-menu">
                            <span>Menu 431</span>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="glyphicon glyphicon-th-list"></i>
                                <span class="menu-text">Classificação</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li><a href="@Url.Action("index", "Pendencias")"> <i class="glyphicon glyphicon-arrow-down"></i>A classificar</a></li>
                                    <li><a href="@Url.Action("Lista", "Pendencias")"> <i class="glyphicon glyphicon-arrow-up"></i>Classificados</a></li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <a href="@Url.Action("index", "Regra")">
                                <i class="glyphicon glyphicon-sort"></i>
                                <span class="menu-text">Regra</span>
                            </a>
                        </li>

                        <li>
                            <a href="@Url.Action("index", "Historico")">
                                <i class="glyphicon glyphicon-transfer"></i>
                                <span class="menu-text">Histórico</span>
                            </a>
                        </li>

                        <li class="header-menu">
                            <span>Menu 987</span>
                        </li>

                    </ul>
                </div>
                <!-- sidebar-menu  -->
            </div>
            <!-- sidebar-footer  -->
            <div class="sidebar-footer">
                <div style="text-align:center">
                    <span>@DateTime.Now.Year </span>
                </div>

            </div>
        </nav>
        <!-- page-content  -->

        <main class="page-content pt-0">
            <nav class="navbar navbar-expand-lg  ">
                <button id="pin-sidebar" class="btn btn-info navbar-btn">
                    <i class="glyphicon glyphicon-align-justify"></i>
                </button>
                <div class="navbar-header">                  
                    <div class="hero-image"> <img src="~/images/logo.png" alt="" style="max-width:720px;" /></div>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Contact", "Home")"><i class="glyphicon glyphicon-cog "></i></a></li>
                        <li><a href="@Url.Action("About", "Home")"><i class="glyphicon glyphicon-info-sign"></i></a></li>
                    </ul>
                </div>
            </nav>
            <div id="overlay" class="overlay"></div>

            <div class="container-fluid p-3">
                @RenderBody()
            </div>
        </main>
        <!-- page-content" -->
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
