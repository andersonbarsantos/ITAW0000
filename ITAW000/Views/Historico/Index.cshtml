@model IEnumerable<ITAW000.Models.Item431>

@{
    ViewBag.Title = "Index";
}

    
        <div class="row">
            <div class="col-3 ">
                <div class=" alert alert-info " role="alert">
                    <h4 class="alert-heading"><i class="glyphicon glyphicon-inbox"></i> - Recebidos</h4>
                    <span style="float:right ; font-size:40px"><strong> @ViewBag.TotalRecebidos</strong></span>
                    <p>Total de Registros Recebidos</p>
                    <br>
                    <hr>
                    <p class="mb-0">Lista Atualizada em @DateTime.Now.ToShortDateString()</p>
                </div>
            </div>

            <div class="col-3 ">
                <div class=" alert alert-success " role="alert">
                    <h4 class="alert-heading"><i class="glyphicon glyphicon-check"></i> - Já Classificados </h4>
                    <span style="float:right ; font-size:40px"><strong> @ViewBag.TotalClassificado</strong></span>
                    <p>lista de registros Classificados.</p>
                    <br>
                    <hr>
                    <p class="mb-0">Lista Atualizada em @DateTime.Now.ToShortDateString()</p>
                </div>
            </div>

            <div class="col-3 ">
                <div class=" alert alert-danger " role="alert">
                    <h4 class="alert-heading"><i class="glyphicon glyphicon-unchecked"></i> - Não Classificados</h4>
                    <span style="float:right ; font-size:40px"><strong> @ViewBag.TotalNaoClassificado</strong></span>
                    <p>Registros ainda não Classificados .</p>
                    <br>
                    <hr>
                    <p class="mb-0">Lista Atualizada em @DateTime.Now.ToShortDateString()</p>
                </div>
            </div>

            <div class="col-3 ">
                <div class=" alert alert-heading " role="alert">
                    <h4 class="alert-heading"><i class="glyphicon glyphicon-unchecked"></i> - Não Classificados</h4>
                    <span style="float:right ; font-size:40px"><strong> @ViewBag.TotalNaoClassificado</strong></span>
                    <p>Registros ainda não Classificados .</p>
                    <br>
                    <hr>
                    <p class="mb-0">Lista Atualizada em @DateTime.Now.ToShortDateString()</p>
                </div>
            </div>



        </div>
 


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <i class="glyphicon glyphicon-transfer"></i>
                        <h3>Historico de movimentções </h3>
                        <p>Movimentações Anteriores</p>
                    </div>
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Classificação</th>
                                            <th align="center">Quantidade</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>



@section Scripts{

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">

    </script>
