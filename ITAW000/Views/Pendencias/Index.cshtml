@model IEnumerable<ITAW000.Models.Regra>

@{
    ViewBag.Title = "Regras";
}

<div class="row">
    <div class="col-12">

        <div class="card" style="min-height: 555px">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-10 text-left ">
                        <h4> <i class="material-icons" style="font-size:25px;">cached</i> Regras </h4>
                    </div>
                    <div class="col-sm-2  text-left ">
                        <a href="@Url.Action("create", "Regra")" class="btn btn-success pull-right" data-toggle="modal">Adicionar Nova</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (@Model.Count() == 0)
                {
                    <section class="container-fluid h-100 d-flex justify-content-center">
                        <div class="jumbotron my-auto">
                            <h3 class="display-3">Nenhum regra foi localizada</h3>
                        </div>
                    </section>
                }
                else
                {
                    <div class="container-fluid">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            <span class="custom-checkbox">
                                                <input type="checkbox" id="selectAll">
                                                <label for="selectAll"></label>
                                            </span>
                                        </th>
                                        <th>Sistema</th>
                                        <th>Responsavel</th>
                                        <th>Situacao</th>
                                        <th>Tipo</th>
                                        <th>Retorno</th>
                                        <th>Descricao</th>
                                        


                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <span class="custom-checkbox">
                                                <input type="checkbox" id="checkItem" name="options[]" value="1" class="custom-checkbox">
                                                <label for="checkItem"></label>
                                            </span>
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sistema.NomeSistema)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Responsavel.NomeResponsavel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Situacao.NomeSituacao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tipo.NomeTipo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Retorno.NomeRetorno)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descricao)
                                        </td>
                                      
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<hr>